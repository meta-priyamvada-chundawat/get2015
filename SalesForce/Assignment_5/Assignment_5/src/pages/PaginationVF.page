<apex:page standardController="Account" extensions="PaginationController">
    <apex:form >
        <apex:pageBlock id="details">
            <apex:pageMessages />
            <apex:pageBlockSection >
                 <apex:inputText label="BillingCity" value="{!BillingCitystring}"/>
                 <apex:inputText label="BillingState" value="{!BillingStatestring}"/>
                 <apex:inputText label="BillingCountry" value="{!BillingCountrystring}"/>
            </apex:pageBlockSection>
            <apex:pageBlockButtons >
                <apex:commandButton value="Search" action="{!search}"/>
                <apex:commandButton value="Clear" action="{!clear}"/>
            </apex:pageBlockButtons>
            <apex:outputPanel rendered="{!IF(accountList!=null, true, false)}">
              <apex:pageBlocktable value="{!accountList}" var="records"> 
                  <apex:column value="{!records.name}" headerValue="Name"/>
                  <apex:column value="{!records.BillingCity}" headerValue="Billing City" />
                  <apex:column value="{!records.BillingState}" headerValue="Billing State" />
                  <apex:column value="{!records.BillingCountry}" headerValue="Billing Country" />
                   
              </apex:pageBlocktable>
                
          </apex:outputPanel>
            <apex:pageblockButtons >
                <apex:commandButton value="First Page" rerender="details" action="{!FirstPage}" disabled="{!prev}"/>
                <apex:commandButton value="Previous" rerender="details" action="{!previous}" disabled="{!prev}"/>
                <apex:commandButton value="Next" rerender="details" action="{!next}" disabled="{!nxt}"/>
                <apex:commandButton value="Last Page" rerender="details" action="{!LastPage}" disabled="{!nxt}"/>
            </apex:pageblockButtons>
        </apex:pageBlock>
    </apex:form>
</apex:page>